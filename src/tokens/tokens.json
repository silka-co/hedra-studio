{
  "primitive": {
    "gray": {
      "50":   { "$value": "#fafafa", "$type": "color" },
      "100":  { "$value": "#f0f0f0", "$type": "color" },
      "200":  { "$value": "#e0e0e0", "$type": "color" },
      "300":  { "$value": "#c0c0c0", "$type": "color" },
      "400":  { "$value": "#8a8a8a", "$type": "color" },
      "500":  { "$value": "#6b6b6b", "$type": "color" },
      "600":  { "$value": "#4a4a4a", "$type": "color" },
      "700":  { "$value": "#333333", "$type": "color" },
      "800":  { "$value": "#242424", "$type": "color" },
      "850":  { "$value": "#1e1e1e", "$type": "color" },
      "900":  { "$value": "#181818", "$type": "color" },
      "950":  { "$value": "#121212", "$type": "color" },
      "1000": { "$value": "#0a0a0a", "$type": "color" }
    },
    "blue": {
      "400": { "$value": "#60a5fa", "$type": "color" },
      "500": { "$value": "#3b82f6", "$type": "color" },
      "600": { "$value": "#2563eb", "$type": "color" }
    },
    "purple": {
      "400": { "$value": "#a78bfa", "$type": "color" },
      "500": { "$value": "#8b5cf6", "$type": "color" }
    },
    "amber": {
      "500":        { "$value": "#f59e0b",   "$type": "color" },
      "alphaLight": { "$value": "#f59e0b30", "$type": "color" }
    }
  },

  "color": {
    "bg": {
      "app":            { "$value": "{primitive.gray.1000}", "$type": "color" },
      "surface":        { "$value": "#141414",               "$type": "color" },
      "surfaceRaised":  { "$value": "#1a1a1a",               "$type": "color" },
      "surfaceOverlay": { "$value": "{primitive.gray.850}",   "$type": "color" },
      "hover":          { "$value": "#ffffff0d",              "$type": "color" },
      "active":         { "$value": "#ffffff14",              "$type": "color" },
      "selected":       { "$value": "#ffffff1a",              "$type": "color" }
    },
    "text": {
      "primary":   { "$value": "{primitive.gray.100}",  "$type": "color" },
      "secondary": { "$value": "{primitive.gray.400}",  "$type": "color" },
      "tertiary":  { "$value": "{primitive.gray.500}",  "$type": "color" },
      "inverse":   { "$value": "{primitive.gray.1000}", "$type": "color" }
    },
    "border": {
      "default": { "$value": "#ffffff0f", "$type": "color" },
      "subtle":  { "$value": "#ffffff08", "$type": "color" },
      "strong":  { "$value": "#ffffff1a", "$type": "color" }
    },
    "accent": {
      "primary":             { "$value": "{primitive.blue.500}",   "$type": "color" },
      "primaryHover":        { "$value": "{primitive.blue.600}",   "$type": "color" },
      "primaryAlphaLight":   { "$value": "#3b82f630",              "$type": "color" },
      "secondary":           { "$value": "{primitive.purple.500}", "$type": "color" },
      "secondaryAlphaLight": { "$value": "#8b5cf630",              "$type": "color" },
      "secondaryAlphaMed":   { "$value": "#8b5cf640",              "$type": "color" }
    }
  },

  "space": {
    "xs":  { "$value": "4px",  "$type": "spacing" },
    "sm":  { "$value": "8px",  "$type": "spacing" },
    "md":  { "$value": "12px", "$type": "spacing" },
    "lg":  { "$value": "16px", "$type": "spacing" },
    "xl":  { "$value": "20px", "$type": "spacing" },
    "2xl": { "$value": "24px", "$type": "spacing" },
    "3xl": { "$value": "32px", "$type": "spacing" },
    "4xl": { "$value": "40px", "$type": "spacing" }
  },

  "radius": {
    "sm":   { "$value": "4px",    "$type": "borderRadius" },
    "md":   { "$value": "6px",    "$type": "borderRadius" },
    "lg":   { "$value": "8px",    "$type": "borderRadius" },
    "xl":   { "$value": "12px",   "$type": "borderRadius" },
    "full": { "$value": "9999px", "$type": "borderRadius" }
  },

  "typography": {
    "fontFamily": {
      "default": {
        "$value": "'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "$type": "fontFamily"
      }
    },
    "fontSize": {
      "2xs": { "$value": "9px",  "$type": "fontSize" },
      "xs":  { "$value": "11px", "$type": "fontSize" },
      "sm":  { "$value": "12px", "$type": "fontSize" },
      "md":  { "$value": "13px", "$type": "fontSize" },
      "lg":  { "$value": "14px", "$type": "fontSize" },
      "xl":  { "$value": "16px", "$type": "fontSize" },
      "2xl": { "$value": "18px", "$type": "fontSize" },
      "3xl": { "$value": "22px", "$type": "fontSize" }
    },
    "fontWeight": {
      "regular":  { "$value": 400, "$type": "fontWeight" },
      "medium":   { "$value": 500, "$type": "fontWeight" },
      "semibold": { "$value": 600, "$type": "fontWeight" },
      "bold":     { "$value": 700, "$type": "fontWeight" }
    },
    "letterSpacing": {
      "wide":   { "$value": "0.05em", "$type": "letterSpacing" },
      "normal": { "$value": "0.01em", "$type": "letterSpacing" }
    }
  },

  "shadow": {
    "dropdown": {
      "$type": "shadow",
      "$value": [
        {
          "offsetX": "0px",
          "offsetY": "8px",
          "blur":    "32px",
          "spread":  "0px",
          "color":   "rgba(0,0,0,0.4)",
          "inset":   false
        },
        {
          "offsetX": "0px",
          "offsetY": "2px",
          "blur":    "8px",
          "spread":  "0px",
          "color":   "rgba(0,0,0,0.2)",
          "inset":   false
        }
      ]
    },
    "canvas": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "0px",
        "blur":    "80px",
        "spread":  "0px",
        "color":   "rgba(0,0,0,0.3)",
        "inset":   false
      }
    }
  },

  "duration": {
    "fast":   { "$value": "150ms", "$type": "duration" },
    "normal": { "$value": "250ms", "$type": "duration" },
    "slow":   { "$value": "300ms", "$type": "duration" }
  },

  "opacity": {
    "dim": { "$value": 0.4, "$type": "opacity" }
  },

  "component": {
    "flyout": {
      "sm": { "$value": "240px", "$type": "sizing" },
      "md": { "$value": "300px", "$type": "sizing" },
      "lg": { "$value": "380px", "$type": "sizing" },
      "xl": { "$value": "480px", "$type": "sizing" }
    },
    "sidebar": {
      "width":    { "$value": "52px", "$type": "sizing" },
      "iconSize": { "$value": "20px", "$type": "sizing" }
    },
    "topNav": {
      "height": { "$value": "44px", "$type": "sizing" }
    },
    "indicator": {
      "width": { "$value": "3px", "$type": "sizing" }
    },
    "dropdown": {
      "height": { "$value": "28px", "$type": "sizing" }
    }
  }
}
